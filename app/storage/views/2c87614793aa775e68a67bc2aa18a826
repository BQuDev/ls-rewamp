<!-- Notification -->
<script type="text/javascript">
var stack_topleft = {"dir1": "down", "dir2": "right"};
</script>
<?php if(Notify::all()): ?>
    <div class="container1">
        <?php foreach(Notify::get('success') as $alert): ?>
            <script type="text/javascript">
                $(function(){
                    new PNotify({
                        title: '<?php echo $alert; ?>',
                        notice:'success',
                        type : 'success',
                        buttons: {
                            closer: true,
                            sticker: true
                        },
                        animate_speed: 100,
                        opacity: .9,
                        hide: true,
                        stack: stack_topleft
                    });
                });
            </script>
        <?php endforeach; ?>

        <?php foreach(Notify::get('error') as $alert): ?>
            <script type="text/javascript">
                            $(function(){
                                new PNotify({
                                    title: '<?php echo $alert; ?>',
                                    notice:'error',
                                    type : 'error',
                                    buttons: {
                                        closer: true,
                                        sticker: true
                                    },
                                    animate_speed: 100,
                                    opacity: .9,
                                    hide: true,
                                    stack: stack_topleft
                                });
                            });
                        </script>
        <?php endforeach; ?>

        <?php foreach(Notify::get('info') as $alert): ?>
            <div class="alert alert-info">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <?php echo $alert; ?>

            </div>
        <?php endforeach; ?>

        <?php foreach(Notify::get('warning') as $alert): ?>
            <div class="alert alert-warning">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <?php echo $alert; ?>

            </div>
        <?php endforeach; ?>
    </div>
<?php endif; ?>

